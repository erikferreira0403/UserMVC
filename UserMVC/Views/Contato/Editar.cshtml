@model ContatoModel

@{
    ViewData["Title"] = "Edição de contatos";
}
<div class="text-center">
    <h1 class=" display-4">Editar contato</h1>
</div>

<form asp-controller="Contato" asp-action="Alterar"  method="post">

    <input type="hidden" asp-for="Id"/>
   <div class="form-group">
         <label for="nome" >Nome</label>
         <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome de contato">
         @Html.ValidationMessageFor(x => x.Nome)
   </div>
   
   <div class="form-group">
         <label for="email" >Email</label>
         <input type="text"  asp-for="Email" class="form-control" placeholder="Digite o email de contato">
         @Html.ValidationMessageFor(x => x.Email)
   </div>

   <div class="form-group">
         <label for="celular" >Celular</label>
         <input type="text"  asp-for="Celular" class="form-control" placeholder="Digite o celular de contato">
         @Html.ValidationMessageFor(x => x.Celular)
   </div>
  
     <button type="submit" class="btn btn-primary btn-block">Alterar</button>

  <a class="btn btn-secondary btn-block" role="button"  asp-controller="Contato" asp-action="Index">voltar</a>
    
</form>

